- if current_user.watching?(owner)
  = button_to "Unwatch", owner_watch_path(owner), class: "btn btn-default has-tooltip", data: {placement: "bottom", title: "Stop receiving alerts for #{owner.nickname}'s scrapers"}
- else
  = button_to "Watch", owner_watch_path(owner), class: "btn btn-default has-tooltip", data: {placement: "bottom", title: "Receive alerts when any of #{owner.nickname}'s scrapers errors"}
