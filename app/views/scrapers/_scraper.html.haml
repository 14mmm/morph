%li{class: ("alert-danger" if scraper.last_run && scraper.last_run.finished_with_errors?)}
  %strong
    = link_to scraper.full_name, scraper
  - unless scraper.description.blank?
    &mdash;
    = scraper.description
  - if scraper.auto_run
    %i.icon-time
  - if scraper.last_run && (scraper.last_run.queued? || scraper.last_run.running?)
    %i.icon-refresh.icon-spin
