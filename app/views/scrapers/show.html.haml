%h1
  = link_to @scraper.owner.to_param, @scraper.owner
  \/
  = link_to @scraper.name, @scraper

%h4= @scraper.description

- if @scraper.scraperwiki_url
  %p
    Forked from
    = link_to "ScraperWiki", @scraper.scraperwiki_url

- if @scraper.github_url
  %p= link_to "Go to GitHub", @scraper.github_url

- if @scraper.forking?
  %h2 Forking!
  .progress.progress-striped.active
    .bar(style="width: 100%")
  %span.muted
    (Refresh page for the latest)

- else
  = render "status"
  .row
    .col-md-9

      - if @scraper.owned_by?(current_user)
        %p= button_to "Run it now!", run_scraper_path(@scraper), class: ((@scraper.queued? || @scraper.running?) ? "btn btn-primary btn-large disabled" : "btn btn-primary btn-lg"), disabled: (@scraper.queued? || @scraper.running?)
    .col-md-3
      = render "settings"

  = render "console"
  = render "data"
  = render "danger"
