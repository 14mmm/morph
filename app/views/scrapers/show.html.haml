- content_for :title, @scraper.full_name

- if @scraper.forking?
  %h1
    = link_to @scraper.owner.to_param, @scraper.owner
    \/
    = link_to @scraper.name, @scraper
  %h2 Forking!
  .progress.progress-striped.active
    .progress-bar(style="width: #{@scraper.forking_progress == 0 ? 5 : @scraper.forking_progress}%")
      - if @scraper.forking_message
        = @scraper.forking_message
        &hellip;
  %span.muted
    (Refresh page for the latest)

- else
  .row
    .col-md-10
      %h1
        = link_to @scraper.owner.to_param, @scraper.owner
        \/
        = link_to @scraper.name, @scraper
      %h4
        = @scraper.description
        = render partial: "auto_clock", locals: {scraper: @scraper}
        - if @scraper.queued? || @scraper.running?
          .pulse

      - if @scraper.readme
        .panel.panel-default
          .panel-heading
            %h4.panel-title= link_to @scraper.readme_filename, @scraper.github_url_readme
          .panel-body
            = @scraper.readme
      = render "status"
      = render "console"
      = render "data"
      = render "history"
      = render "statistics"
    .col-md-2
      - if signed_in?
        .button_title_adjust= render partial: "watch_button", locals: {scraper: @scraper}
        = link_to "Settings", scraper_settings_path
        - if @scraper.can_write?(current_user)
          %p= button_to "Run it now!", run_scraper_path(@scraper), class: (!@scraper.runnable? ? "btn btn-primary btn-lg disabled" : "btn btn-primary btn-lg"), disabled: !@scraper.runnable?
      - if @scraper.scraperwiki_url
        %p
          Forked from
          = link_to "ScraperWiki", @scraper.scraperwiki_url, target: "_blank"

      %p
        git clone URL: #{@scraper.git_url_https}
      - if @scraper.github_url
        %p
          %i.icon-github-sign.icon-large
          = link_to @scraper.github_url, target: "_blank" do
            = @scraper.name
          - if @scraper.main_scraper_filename
            (#{link_to @scraper.main_scraper_filename, @scraper.github_url_main_scraper_file, target: "_blank"}) on GitHub


